{
  "name": "advanced-commit-linter",
  "version": "2.1.2",
  "description": "Lint commit messages based on policy",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "vitest run --coverage",
    "update-snapshots": "vitest run --update",
    "all": "yarn && yarn run build && yarn run format && yarn run package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redhat-plumbers-in-action/advanced-commit-linter.git"
  },
  "keywords": [
    "actions",
    "node",
    "linter",
    "commit-messages"
  ],
  "author": "jamacku@redhat.com",
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/github": "6.0.1",
    "@octokit/core": "7.0.2",
    "@octokit/plugin-throttling": "11.0.1",
    "@probot/octokit-plugin-config": "3.0.2",
    "zod": "3.25.32"
  },
  "devDependencies": {
    "@octokit/types": "14.1.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "22.15.23",
    "@vercel/ncc": "0.38.3",
    "@vitest/coverage-v8": "3.1.4",
    "prettier": "3.5.3",
    "ts-node": "10.9.2",
    "typescript": "5.8.3",
    "vitest": "3.1.4"
  }
}
