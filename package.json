{
  "name": "advanced-commit-linter",
  "version": "2.1.0",
  "description": "Lint commit messages based on policy",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "vitest run --coverage",
    "update-snapshots": "vitest run --update",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redhat-plumbers-in-action/advanced-commit-linter.git"
  },
  "keywords": [
    "actions",
    "node",
    "linter",
    "commit-messages"
  ],
  "author": "jamacku@redhat.com",
  "packageManager": "yarn@3.6.4",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/github": "^5.1.1",
    "@octokit/core": "^5.0.0",
    "@probot/octokit-plugin-config": "^1.1.6",
    "issue-metadata": "^0.1.6",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@octokit/types": "^12.0.0",
    "@total-typescript/ts-reset": "^0.5.0",
    "@types/node": "18.18.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vercel/ncc": "0.38.0",
    "@vitest/coverage-v8": "^0.34.0",
    "eslint": "^8.29.0",
    "eslint-plugin-prettier": "5.0.0",
    "prettier": "3.0.3",
    "ts-node": "10.9.1",
    "typescript": "^5.0.0",
    "vitest": "0.34.6"
  }
}
