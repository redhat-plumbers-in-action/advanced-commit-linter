{
  "name": "advanced-commit-linter",
  "version": "2.1.2",
  "description": "Lint commit messages based on policy",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "vitest run --coverage",
    "update-snapshots": "vitest run --update",
    "all": "yarn && yarn run build && yarn run format && yarn run package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redhat-plumbers-in-action/advanced-commit-linter.git"
  },
  "keywords": [
    "actions",
    "node",
    "linter",
    "commit-messages"
  ],
  "author": "jamacku@redhat.com",
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "2.0.2",
    "@actions/github": "7.0.0",
    "@octokit/core": "7.0.6",
    "@octokit/plugin-throttling": "11.0.3",
    "@probot/octokit-plugin-config": "4.1.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@octokit/types": "16.0.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "25.0.10",
    "@vercel/ncc": "0.38.4",
    "@vitest/coverage-v8": "4.0.18",
    "prettier": "3.8.1",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
